<Window x:Class="client.CreateChat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:client"
        mc:Ignorable="d"
        Title="CreateChat" Height="450" Width="300">
    <Grid>
        <TextBox x:Name="txtChatName" HorizontalAlignment="Left" Height="27" Margin="115,84,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="141" />
        <Label Content="Chat name: " HorizontalAlignment="Left" Margin="37,84,0,0" VerticalAlignment="Top" />
        <TextBox x:Name="txtParticipants" HorizontalAlignment="Left" Height="27" Margin="115,115,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="141" />
        <Label Content="Participants: " HorizontalAlignment="Left" Margin="37,115,0,0" VerticalAlignment="Top" />
        <Button x:Name="btnCreateChat" Content="Create chat" HorizontalAlignment="Left" Margin="115,155,0,0" VerticalAlignment="Top" Width="75" Click="btnCreateChat_Click" />
        <Label x:Name="txtError" Content=""  Foreground="Red" Visibility="Hidden" HorizontalAlignment="Left" Margin="37,180,0,0" VerticalAlignment="Top" Width="219" HorizontalContentAlignment="Center" Height="229" />
    </Grid>
</Window>